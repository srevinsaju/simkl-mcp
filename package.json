{
  "name": "simkl-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Simkl API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "openapi": "mkdir -p generated && bunx apib2swagger -i specs/apiary.apib -o generated/simkl-openapi3.json --open-api-3",
    "codegen": "bun run openapi && bun run scripts/codegen.ts",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "simkl",
    "tracking",
    "anime",
    "movies",
    "tv-shows"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.2.2",
    "agents": "^0.3.0",
    "ai": "^4.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241231.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "wrangler": "^4.54.0"
  }
}
